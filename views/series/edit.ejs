<h1>Editar</h1>
<% if(errors) { %>
    <% errors.forEach(error => { %>
        <p>Favor preencher o campo <%= error %></p>
    <% }) %>
<% } %>
<form method="post">
    <label for="name">Nome da s√©rie</label>
    <input type="text" name="name" id="name" value="<%= serie.name %>">

    <select name="status" id="status">
        <% status.forEach( item => { %>
            <option value="<%= item.id %>" <% if(item.id === serie.status) { %> selected="selected" <% } %>><%= item.name %></option>
        <% } ) %>
    </select>
    <button>Atualizar</button>
</form>